{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5255",
    "HttpHandlerOptions": {
      "DangerousAcceptAnyServerCertificateValidator": true
    },
    "ServiceDiscoveryProvider": {
      "Host": "consul",
      "Port": 8500,
      "Type": "Consul",
      "PollingInterval": 2000
    }
  },
  "Routes": [
    {
      "SwaggerKey": "ecommerce-authentication",
      "UpstreamPathTemplate": "/gateway/auth/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authAPI",
          "Port": 8080
        }
      ],
      "DownstreamPathTemplate": "/api/v1/Auth/{everything}",
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 4,
        "DurationOfBreak": 10,
        "TimeoutValue": 5000
      },
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10s",
        "Limit": 2
      }
    },
    {
      "SwaggerKey": "ecommerce-product",
      "UpstreamPathTemplate": "/gateway/product/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
