{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MessageBroker": {
    "Host": "amqp://localhost:5672",
    "UserName": "guest",
    "Password": "guest"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5434;Database=OrderDb;Username=postgres;Password=postgres"
  },
  "Authentication": {
    "Issuer": "https://localhost:7202",
    "Audience": "ecommerce.api",
    "RequireHttpsMetadata": false,
    "ClockSkewMinutes": 2,
    "EnableBearerHeaderPatch": true,

    "Jwks": {
      "Uri": "https://localhost:7202/.well-known/openid-configuration/jwks",
      "ValidAlgorithms": [ "RS256" ],
      "AllowInsecureDevCertificate": true
    },
    "ScopeClaimRequired": "ecommerce.api"
  },
  "AllowedHosts": "*"
}
